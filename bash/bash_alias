# List commands
alias ll="ls -alh"
alias l.='ls -d .*'

# cmd from windows
alias cls='clear'

# Change Dir
alias cd..='cd ..'
alias ..='cd ..'
alias .2='cd ../../'
alias .3='cd ../../../'
alias .4='cd ../../../../'

# Commands history
alias hist='history'

# For nvim
if [ -e ~/.config/nvim/init.vim ]; then
	alias vi="nvim"
	alias vim="nvim"
fi

