[user]
	name = Hao Chen
	email = git@haoc.io

[core]
	editor = vim

[color]
	ui = auto
	branch = auto
	diff = auto
	status = auto

[push]
	# Only push current branch to remote
	default = simple

[alias]
	st = status
	df = diff
	dif = diff
	co = checkout
	br = branch
	ci = commit
	cmt = commit -m
	acmt = commit -a -m

	# Show log in a compact way
	l = log --graph --oneline --decorate
    	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	
	# Diff file with cached version(Diff after file been added)
	dfc = diff --cached
	
	# Check remote details
	rmt = remote -v
